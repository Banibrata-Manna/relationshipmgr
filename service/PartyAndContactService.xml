            </auto-parameters>
        </in-parameters>
        <out-parameters>
            <auto-parameters>
                <exclude field-name="lastUpdatedStamp"/>
            </auto-parameters>
        </out-parameters>
    </service>

    <service verb="create" noun="TelecomNumber" type="entity-auto">
        <in-parameters>
            <auto-parameters entity-name="TelecomNumber">
                <exclude field-name="lastUpdatedStamp"/>
            </auto-parameters>
        </in-parameters>
        <out-parameters>
            <auto-parameters>
                <exclude field-name="lastUpdatedStamp"/>
            </auto-parameters>
        </out-parameters>
    </service>

    <service verb="create" noun="PostalAddress" type="entity-auto">
