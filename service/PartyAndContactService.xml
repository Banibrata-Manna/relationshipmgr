    <service verb="create" noun="CreateEmailAddress">
        <in-parameters>
            <auto-parameters entity-name="ContactMech">
                <exclude field-name="contactMechTypeId"/>
                <exclude field-name="lastUpdatedStamp"/>
            </auto-parameters>
        </in-parameters>
        <actions>
            <set field="contactMechTypeId" value="EMAIL_ADDRESS"/>
            <service-call name="create#ContactMech" in-map="context" out-map="context"/>
        </actions>
    </service>

    <service verb="create" noun="PartyContactMech" type="entity-auto">
        <in-parameters>
            <auto-parameters entity-name="PartyContactMech">
                <exclude field-name="lastUpdatedStamp"/>
            </auto-parameters>
        </in-parameters>
        <out-parameters>
            <auto-parameters/>
        </out-parameters>
    </service>
</services>