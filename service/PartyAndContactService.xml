            <auto-parameters>
                <exclude field-name="lastUpdatedStamp"/>
            </auto-parameters>
        </out-parameters>
    </service>

    <service verb="create" noun="CreatePostalAddress">
        <in-parameters>
            <auto-parameters entity-name="ContactMech" include="pk">
                <exclude field-name="lastUpdatedStamp"/>
            </auto-parameters>
            <auto-parameters entity-name="PostalAddress" include="nonpk">
                <exclude field-name="lastUpdatedStamp"/>
            </auto-parameters>
        </in-parameters>
        <actions>
            <set field="contactMechTypeId" value="POSTAL_ADDRESS"/>
            <service-call name="create#ContactMech" in-map="context" out-map="context"/>
            <service-call name="create#PostalAddress" in-map="context" out-map="context"/>
        </actions>
    </service>

    <service verb="create" noun="CreateTelecomNumber">
